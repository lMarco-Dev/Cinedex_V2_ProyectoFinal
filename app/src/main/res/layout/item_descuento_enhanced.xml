<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_disc_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_news_sample"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/item_disc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del descuento"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_disc_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del descuento"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_disc_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Válido hasta X"
                android:textColor="@color/kick_green"
                android:textSize="12sp"
                android:textStyle="italic"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
