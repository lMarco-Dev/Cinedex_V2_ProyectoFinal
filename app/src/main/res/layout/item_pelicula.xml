<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#222222"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Poster de la película -->
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#333"
            tools:src="@tools:sample/avatars" />

        <!-- Contenido textual -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tv_titulo_pelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Título de la Película"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@android:color/white" />

            <!-- Categoría y duración -->
            <TextView
                android:id="@+id/tv_categoria_duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_titulo_pelicula"
                android:layout_marginTop="4dp"
                android:text="Categoría - 120 min"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#BDBDBD" />

            <!-- Director y país -->
            <TextView
                android:id="@+id/tv_director_pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_categoria_duracion"
                android:layout_marginTop="4dp"
                android:text="Director · País"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="#AAAAAA" />

            <!-- Nota / rating -->
            <TextView
                android:id="@+id/tv_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="8.5"
                android:textColor="#FFC107"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableTint="#FFC107" />

            <!-- Botones de acción -->
            <LinearLayout
                android:id="@+id/layout_botones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_editar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Editar"
                    android:src="@drawable/ic_edit"
                    app:tint="#42A5F5" />

                <ImageButton
                    android:id="@+id/btn_eliminar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Eliminar"
                    android:src="@drawable/ic_delete"
                    app:tint="#E53935" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
