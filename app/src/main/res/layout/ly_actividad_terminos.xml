<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark"
    android:padding="20dp"
    tools:context=".UI.Activities.Actividad_Terminos">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO PRINCIPAL -->
        <TextView
            android:id="@+id/tvTituloTerminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Cinedex"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <!-- SUBTÍTULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Términos y Servicios"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- CONTENIDO DE TÉRMINOS -->
        <TextView
            android:id="@+id/tvContenidoTerminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:text="@string/terminos_cinedex"
            android:layout_marginBottom="20dp" />

        <!-- CHECKBOX -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/cbAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/kick_green"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="He leído y acepto los términos y servicios"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- BOTÓN CONTINUAR (MISMO ESTILO DE LOGIN/REGISTRO) -->
        <FrameLayout
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_btn_green"
            android:foreground="?selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Continuar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />
        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
