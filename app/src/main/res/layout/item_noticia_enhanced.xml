<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:background="@color/gray_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_news_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_news_sample"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/item_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de noticia"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/item_news_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen de la noticia..."
                android:textColor="@color/text_gray"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/item_news_meta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hace 2h • Noticias"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
